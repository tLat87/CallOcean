# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'CallOcean' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Fix Hermes script phase to add output paths and handle errors gracefully
    installer.pods_project.targets.each do |target|
      if target.name == 'hermes-engine'
        Pod::UI.puts "Processing hermes-engine target..."
        target.build_phases.each do |phase|
          if phase.is_a?(Xcodeproj::Project::Object::PBXShellScriptBuildPhase)
            # Check both name and shell_script content for Hermes references
            phase_name = phase.name || ''
            script_content = phase.shell_script || ''
            combined_check = "#{phase_name} #{script_content}"
            
            if combined_check.include?('Hermes') || combined_check.include?('hermes') || combined_check.include?('[CP-User]')
              Pod::UI.puts "Found Hermes script phase: #{phase_name}"
              
              # Add output paths using the correct Xcodeproj API
              output_paths_array = phase.output_paths || []
              output_paths_array << "$(BUILT_PRODUCTS_DIR)/hermes.framework"
              output_paths_array << "$(BUILT_PRODUCTS_DIR)/hermes.framework/hermes"
              output_paths_array << "$(PODS_XCFRAMEWORKS_BUILD_DIR)/hermes-engine/Pre-built/hermes.framework/hermes"
              phase.output_paths = output_paths_array.uniq
              
              # Set alwaysOutOfDate to false to respect output paths
              phase.always_out_of_date = '0'
              
              Pod::UI.puts "Added #{phase.output_paths.length} output paths to Hermes script phase"
            end
          end
        end
      end
    end
    
    # Save the project to ensure changes are persisted
    installer.pods_project.save
    Pod::UI.puts "Saved Pods project with Hermes fixes"
  end
end
